@page
@model Viber.Pages.UserPages.CreateModel

@{ ViewData["Title"] = "CreateUser"; }
    
  <div class="container" style="margin-top: -50px">
        <div class="row">
            <div class="col-sm">
                <h4>Capture the vibe, share the feeling </h4>
                <p>
                    Your go-to platform for creating and sharing moodboards
                    that reflect your unique tastes! With Viber,
                    you can craft personalized vibeboards filled with your favorite music,
                    movies, and inspirations, all tagged to help you and others discover the perfect fit for every mood.
                    <br /><br />Join our vibrant community, explore new vibes, and let your creativity shine!
                </p>
            </div>
            <div class="col-sm" style="margin-left: 30px">
                <h4>
                    Create a profile
                </h4>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <p2>Username </p2>
                        <input asp-for="User.Username" class="form-control" placeholder="Enter username">
                        <span asp-validation-for="User.Username" class="text-danger"></span>
                    </div>
                    <p2>Password</p2>
                    <input asp-for="User.Password" class="form-control" placeholder="Enter password">
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                    <a asp-page="/Home" class="custom-button-submit" style="float:left">ENTER AS GUEST</a>
                    <button type="submit" class="custom-button-submit" style="float:right">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
}
