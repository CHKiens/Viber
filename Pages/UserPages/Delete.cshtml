@page
@model Viber.Pages.UserPages.Delete

@{
    ViewData["Title"] = "Delete User";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<h1>ANNIHILATE User</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.User.UserId" />
            <div class="form-group">
                <label asp-for="@Model.User.UserId" class="control-label"></label>
                <input asp-for="@Model.User.UserId" class="form-control" readonly />
                <span asp-validation-for="@Model.User.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Username" class="control-label"></label>
                <input asp-for="@Model.User.Username" class="form-control" readonly />
                <span asp-validation-for="@Model.User.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Role" class="control-label"></label>
                <input asp-for="@Model.User.Role" class="form-control" readonly />
                <span asp-validation-for="@Model.User.Role" class="text-danger"></span>
            </div>
                <button type="submit" class="btn btn-danger" >Annihilate User</button>
        </form>
    </div>
</div>


