@page
@model Viber.Pages.UserPages.Mod

@{
    ViewData["Title"] = "Mod";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
<div>
    <table class="table">
        <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Username
            </th>
            <th>
                Role
            </th>
            <th>

            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var u in Model.Users)
        {
            <tr>
                <td>
                    @u.UserId
                </td>
                <td>
                    @u.Username
                </td>
                <td>
                    @u.Role
                </td>
                <td style="text-align:right">
                    <a type="submit" class="btn btn-danger" asp-page="/UserPages/Delete" asp-route-Id="@u.UserId">
                        <i class="fa-solid fa-dumpster-fire"></i>
                    </a>
                </td>

            </tr>
        }
        </tbody>
    </table>
</div>

</body>
