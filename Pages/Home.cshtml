@page
@using Viber.Models
@model Viber.Pages.HomeModel
@{
}
<form method="get" class="d-flex">
    <div class="container">
        <div class="search-style">
                    
            <input class="search" type="search" asp-for="SearchTerm" placeholder="Search here... e.g. sad, happy, angry">
            <select class="dropdown" asp-for="IsMoodboard">
                <option value="true">Moodboards</option>
                <option value="false">Tags</option>
            </select>
            <button type="submit" class="custom-button-search">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>
</form>

<div style="display:flex; margin-left:30px; margin-top:10px">
    <p>Filter by: &nbsp</p><p id="p-filter"> Date, Popularity, Rating</p> @* filtering af søgeresultater implementeres her *@
</div>

@{
    Random rand = new Random();
}

@if (Model.SearchTerm != null)
{
    if (Model.IsMoodboard)
    {
        <div>
            @foreach (var mb in Model.SearchResultMoodboards)
            {
                <p>
                    @mb.Title
                </p>
            }
        </div>
    }
    else
    {
        foreach (var tag in Model.SearchResultSubTag)
        {
            <a asp-page="/MoodBoardPages/ViewSubTag" asp-route-Id="@tag.SubTagId" class="text-decoration-none">
                <h4>#@tag.Name</h4>
            </a>
            <div class="square-row">
            @if (Model.MoodboardsByTag.ContainsKey(tag.SubTagId))
            {
                var moodboards = Model.MoodboardsByTag[tag.SubTagId];

                foreach (var moodboard in moodboards)
                {
                    <a asp-page="/MoodBoardPages/ViewMoodboard" asp-route-Id="@moodboard.MoodboardId">
                        <div class="square">
                            <img src="@moodboard.Thumbnail" alt="Moodboard Image"/>
                            <div class="image-text">@moodboard.Title</div>
                        </div>
                    </a>

                }
            }
        </div>
        }

    }
}

@if (Model.SearchTerm == null)
{
    <h4 style="margin-left:20px; margin-top:20px;margin-bottom:0px;">@tag.Name</h4>

        <div class="square-row">
            @if (Model.MoodboardsByTag.ContainsKey(tag.PrimaryTagId))
            {
                var moodboards = Model.MoodboardsByTag[tag.PrimaryTagId];

                foreach (var moodboard in moodboards)
                {
                    <a asp-page="/MoodBoardPages/ViewMoodboard" asp-route-Id="@moodboard.MoodboardId">
                        <div class="square">
                            @if (moodboard.Thumbnail == null)
                            {

                                int randNumber = rand.Next(1, 200);

                                <img src="https://picsum.photos/200/300?=3&random={@randNumber}">
                            }
                            else
                            {
                                <img src="@moodboard.Thumbnail" />
                            }
                            <span class="image-text">@moodboard.Title</span>
                        </div>
                    </a>
                }
            }
        </div>
        <div class="subtags-container">
            @foreach (var st in Model.SubTags.Where(SubTag => SubTag.PrimaryTagId == tag.PrimaryTagId))
            {
                <span class="subtag-item">
                    <p2>#@st.Name</p2>
                </span>
            }
        </div>
        <div class="stripe-horizontal" style="height:4px; margin-top:30px;"></div> //den passer nok ikke lige ind, men følte at der manglede farve. bliver nok fjernet igen
}    
            