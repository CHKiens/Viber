@page
@model Viber.Pages.HomeModel
@{
}
<div class="container">
    <div class="search-style">
        <input class="search" type="search" placeholder="Search here... e.g. sad, happy, angry"><a href="#" class="custom-button-search"><i class="bi bi-search"></i></a>
    </div>
</div>
<div style="display:flex; margin-left:30px; margin-top:10px">
    <p>Filter by: &nbsp</p><p id="p-filter"> Date, Popularity, Rating</p> @* filtering af søgeresultater implementeres her *@
</div>
<div class="container"> @*denne container skal kun vises hvis søgefeltet er tomt, og ingen filtre er applied. *@
    <h4>Sad</h4>
    <div class="square-row">
        @for (int i = 12; i < 20; i++) @* her skal itereres over antal af entries indeholder "main tag (#sad)" *@
        {

                <div class="square">
                    <img src="@($"https://picsum.photos/id/{i}/200/300")" alt="placeholder" />
                    <div class="image-text"> Min billedtekst</div>
                </div>

        }
    </div>
    <p class="tag">#rain, #clouds, #darkness</p> @* //tags skulle gerne kunne klikkes på, hvilket fører til en oversigt over andre posts med samme tag *@
    <h4>Happy</h4>
    <div class="square-row">
    @for (int i = 20; i < 28; i++)
    {
                <div class="square">

                    <img src="@($"https://picsum.photos/id/{i}/200/300")" alt="placeholder" />
                    <div class="image-text"> Test test</div>
                </div>

    }
    </div>
    <p class="tag">#sun, #smile, #party</p>
</div>           
            