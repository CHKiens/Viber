@page
@using Microsoft.IdentityModel.Tokens
@model Viber.Pages.MoodBoardPages.ViewMyMoodboards

@{
    ViewData["Title"] = "MyMoodboards";
}

@{
    Random rand = new Random();
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="">Profile</h4>
    </div>
    <div class="container"style="height:100%; width:100%">
        <div class="row" style="margin-bottom:30px">
            <div class="col-md-auto">
                <div class="square" style="height:250px; width:250px">
                    <img src="https://picsum.photos/id/513/250/250" />
                </div>
                <p style="margin-left:15px; margin-bottom:0px;margin-top:15px;font-size:15px;color:#474747">Username</p>
                <p style="margin-left:15px;font-size:20px;"> @Model.Username</p>
            </div>
            <div class="col" style="margin:15px">
                <h2 style="font-size:20px;font-weight:bold;color:#BDBDBD">About me</h2>
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque enim lacus, 
                    cursus et cursus ac, hendrerit vel dui. Praesent feugiat ut orci ut luctus. <br /><br />Duis risus dui,
                    tristique quis elementum nec, euismod facilisis metus. Donec eget leo fringilla sapien ultrices vestibulum. 
                    Quisque non imperdiet libero, ac fermentum metus. Pellentesque id sem non tortor iaculis luctus. 
                    Suspendisse at nulla bibendum, fermentum nibh a, ultrices augue.
                </p>
            </div>
            <div class="col-2" style="margin:15px">
                <h2>Socials</h2>
                <div class="row">
                    <div class="col-2">
                        <p>
                            <i class="fab fa-facebook-f"></i>
                        </p>
                        <p>
                            <i class="fab fa-twitter"></i>
                        </p>
                        <p>
                            <i class="fab fa-instagram"></i>
                        </p>
                        <p>
                            <i class="fab fa-youtube"></i>
                        </p>
                    </div>
                    <div class="col">
                        <p>
                            @Model.Username
                        </p>
                        <p>
                            @@@Model.Username
                        </p>
                        <p>
                            @Model.Username
                        </p>
                        <p>
                            @@@Model.Username
                        </p>
                    </div>
                </div>
                

            </div>
            
        </div>
        <div class="stripe-horizontal"></div>
        
    </div>
    
    <div class="row">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="">Moodboards</h4>
        </div>
    </div>

    <div class="square-row">
        @if (!Model.Moodboards.IsNullOrEmpty())
        {
            var moodboards = Model.Moodboards;

            @foreach (var mb in moodboards)
            {
                <a asp-page="/MoodBoardPages/ViewMoodboard" asp-route-Id="@mb.MoodboardId">
                    <div class="square">
                        @if (mb.Thumbnail == null)
                        {

                            int randNumber = rand.Next(1, 200);

                            <img src="https://picsum.photos/200/300?grayscale=3&random={@randNumber}">
                        }
                        else
                        {
                            <img src="@mb.Thumbnail" />
                        }
                        <span class="image-text">@mb.Title</span>
                    </div>
                </a>
            }
        }
    </div>
</body>


