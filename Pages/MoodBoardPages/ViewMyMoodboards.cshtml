@page
@using Microsoft.IdentityModel.Tokens
@model Viber.Pages.MoodBoardPages.ViewMyMoodboards

@{
    ViewData["Title"] = "MyMoodboards";
}

@{
    Random rand = new Random();
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="row">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="">My Moodboards</h4>
        </div>
    </div>

    <div class="square-row">
        @if (!Model.MyMoodboards.IsNullOrEmpty())
        {
            var moodboards = Model.MyMoodboards;

            @foreach (var mb in moodboards)
            {
                <div class="square">
                    @if (mb.Thumbnail == null)
                    {

                        int randNumber = rand.Next(1, 200);

                        <img src="https://picsum.photos/200/300?grayscale=3&random={@randNumber}">
                    }
                    else
                    {
                        <img src="@mb.Thumbnail" />
                    }
                    <span class="image-text">@mb.Title</span>
                    <div class="image-text">@mb.Title</div>
                </div>
            }
        }
    </div>
</body>


