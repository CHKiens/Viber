@page
@using Microsoft.IdentityModel.Tokens
@model Viber.Pages.MoodBoardPages.ViewMyMoodboards

@{
    ViewData["Title"] = "MyMoodboards";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="row">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="">My Moodboards</h4>
        </div>
    </div>

    <div class="square-row">
        @if (!Model.MyMoodboards.IsNullOrEmpty())
        {
            var moodboards = Model.MyMoodboards;

            @foreach (var mb in moodboards)
            {

                <div class="square">

                    <img src="@mb.Thumbnail" alt="Moodboard Image" />
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal" data-moodboard-title="@mb.Title" >
                        <i class="fa-solid fa-dumpster-fire"></i>
                    </button>
                    <div class="image-text">@mb.Title</div>
                </div>
            }
        }
    </div>
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <form method="post">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Delete moodboard</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        Are you sure you wish to permanently delete this moodboard?
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Yes </button>
                        <button type="button" class="btn" data-bs-dismiss="modal">Cancel</button>
                        
                    </div>

                </div>
            </form>

        </div>
    </div>
</body>


