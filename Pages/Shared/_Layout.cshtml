@using Viber.Models
@using Viber.Services.Interfaces
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Viber</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Viber.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@100..800&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">

</head>
@{ var UserId = Context.Session.GetString("UserId"); }
<body>
    <div class="container"> 
        <div class="header">
            @if (ViewData["Title"]?.ToString() == "CreateUser")
            {
                <span class="title-frontpage">viber</span>
            }
            else
            {
                <a asp-page="/Home" class="custom-button"><span class="title">viber</span></a>
            }
            @if (ViewData["Title"]?.ToString() != "Login" && UserId == null ) //Viser kun login hvis man ikke allerede er logget ind
            {
                <a asp-page="/Login" class="custom-button" style="height: 25px"><span class="login"><i class="bi bi-person"></i>Login</span></a>
            }
            @if (UserId != null && ViewData["Title"]?.ToString() != "CreateMoodboard")
            {

                <nav class="navbar navbar-expand">

                    <div class="container-fluid">
                        <!-- Links -->
                        <ul class="nav nav-tabs">
                            <li class="nav-item me-2">
                                <a asp-page="/MoodboardPages/ViewMyMoodboards" class="custom-button nav-link"><span class="login">My Moodboards</span></a>
                            </li>
                            <li class="nav-item me-2">
                                <a asp-page="/MoodBoardPages/Create" class="custom-button nav-link"><span class="login">Create Moodboard</span></a>
                            </li>

                            <li class="nav-item me-2">
                                <a asp-page="/Logout" class="custom-button nav-link active "><span class="login">Logout</span></a>
                            </li>
                        </ul>
                    </div>

                </nav>
                
            }
            
            
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>